<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shad="clr-namespace:ShadUI.Controls;assembly=ShadUI"
    xmlns:vm="using:freader.ViewModels"
    x:Class="freader.Views.Reader.ReaderToolbar"
    x:CompileBindings="True"
    x:DataType="vm:ReaderToolbarViewModel"
    Height="56"
    Background="{DynamicResource SurfaceElevated}"
    Padding="12,0">

    <DockPanel VerticalAlignment="Center">
        <!-- Back Button -->
        <Button DockPanel.Dock="Left"
                     Command="{Binding GoBackCommand}">
            ‚Üê Library
        </Button>

        <!-- Center: Book title -->
        <TextBlock
            DockPanel.Dock="Top"
            Text="{Binding CurrentBookTitle}"
            FontWeight="SemiBold"
            FontSize="14"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            TextTrimming="CharacterEllipsis" />

        <!-- Right: Controls -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    DockPanel.Dock="Right"
                    Spacing="8">

            <!-- Font Size -->
            <Button Command="{Binding DecreaseFontCommand}">
                A-
            </Button>

            <Button Command="{Binding IncreaseFontCommand}">
                A+
            </Button>

            <!-- Theme Toggle -->
            <Button Command="{Binding ToggleThemeCommand}">
                üåì
            </Button>
        </StackPanel>
    </DockPanel>
</UserControl>