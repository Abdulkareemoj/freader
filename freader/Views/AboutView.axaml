<UserControl
    x:Class="freader.Views.AboutView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:freader.ViewModels"
    x:DataType="vm:AboutViewModel">

    <Border Padding="20">
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="12">
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="{Binding AppName}" />
            <TextBlock
                FontSize="14"
                Opacity="0.8"
                Text="Version {Binding Version}" />
            <TextBlock
                FontSize="12"
                Opacity="0.7"
                Text="{Binding Copyright}" />

            <TextBlock
                MaxWidth="480"
                Margin="0,12,0,0"
                Opacity="0.9"
                TextWrapping="Wrap">
                freader is an open-source minimal eBook reader built with Avalonia and ShadUI. It supports EPUB, PDF, MOBI and comic archives.
            </TextBlock>

            <StackPanel
                Margin="0,8,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="8">
                <Button
                    Width="140"
                    Classes="Primary"
                    Click="VisitProject_Click">
                    Visit project
                </Button>
                <Button Width="100" Click="Close_Click">Close</Button>
            </StackPanel>

            <TextBlock
                MaxWidth="480"
                FontSize="12"
                Opacity="0.85"
                TextWrapping="Wrap">
                <Run Text="Project: " />
                <Run Text="{Binding ProjectUrl}" />
            </TextBlock>
        </StackPanel>
    </Border>
</UserControl>
