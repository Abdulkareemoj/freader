<UserControl
    x:Class="freader.Views.ExportView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:freader.ViewModels"
    x:DataType="vm:ExportViewModel">

    <Border Padding="20">
        <StackPanel Spacing="12">
            <TextBlock
                FontSize="18"
                FontWeight="SemiBold"
                Text="Export Data" />
            <TextBlock TextWrapping="Wrap">Export a snapshot of your app progress and settings for backup or migration.</TextBlock>
            <Button
                Width="160"
                Classes="Primary"
                Click="Export_Click">
                Export to Documents
            </Button>
        </StackPanel>
    </Border>
</UserControl>
